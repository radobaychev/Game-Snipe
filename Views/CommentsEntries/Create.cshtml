@model GameSnipe.Models.CommentsEntry

@{
    ViewData["Title"] = "Create";
    Layout = "~/Views/Shared/Blog.cshtml";
}

<h2 class="header title">Share your opinion</h2>
<div class="wrapper row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Usernameame" class="control-label"></label>
                <input asp-for="Usernameame" class="form-control" placeholder="Your Username" />
                <span asp-validation-for="Usernameame" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Message" class="control-label"></label>
                <input asp-for="Message" class="form-control" placeholder="Your Message"/>
                <span asp-validation-for="Message" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="DateAdded" class="control-label"></label>
                <input asp-for="DateAdded" class="form-control" />
                <span asp-validation-for="DateAdded" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Submit" class="submit btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index" class="submit addComment">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
